<body>
	<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
	<% end %>

	<%= form_for(@book) do |f| %>
	<p>
		<strong>Title:</strong>
		<%= f.label :title, @book.title, class:"book_title" %>
	</p>
	<p>
		<strong>Body:</strong>
		<%= f.label :body, @book.body, class:"book_body"%>
	</p>
	<a>
		<%= link_to 'Edit', edit_book_path(@book.id), class:"edit_#{@book.id}" %> | <%= link_to 'Back', books_path, class:"back" %>
	</a>

	<% end %>
</body>